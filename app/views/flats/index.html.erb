<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Shingeki no Airbnb</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card-flat">
          <div class="card-flat-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="card-flat-content">
            <div class="card-flat-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <%= flat.number_of_guests %> people
              </div>
              <div class="flex ms-3">
                â‚¬ <%= flat.price_per_night %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
