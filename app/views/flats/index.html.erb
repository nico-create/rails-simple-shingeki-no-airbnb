<h1>Flats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Price per Night</th>
      <th>Number of Guests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
    <tr>
      <td><%= flat.name %></td>
      <td><%= flat.address %></td>
      <td><%= flat.description%></td>
      <td><%= flat.price_per_night %></td>
      <td><%= flat.number_of_guests %></td>
    </tr>
    <% end %>
  </tbody>
</table>
